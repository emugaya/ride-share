<p id="notice"><%= notice %></p>

<h1>Rides</h1>

<table>
  <thead>
    <tr>
      <th>Time</th>
      <th>Ride type</th>
      <th>From location</th>
      <th>Destination</th>
      <th>Info</th>
      <th>Seats</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rides.each do |ride| %>
      <tr>
        <td><%= ride.time %></td>
        <td><%= ride.ride_type %></td>
        <td><%= ride.from_location %></td>
        <td><%= ride.destination %></td>
        <td><%= ride.info %></td>
        <td><%= ride.seats %></td>
        <td><%= ride.status %></td>
        <td><%= link_to 'Show', ride %></td>
        <td><%= link_to 'Edit', edit_ride_path(ride) %></td>
        <td><%= link_to 'Destroy', ride, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ride', new_ride_path %>
<%= render 'form', ride: @ride %>
